template header
fitType
stretch
correction
note

package templates.pants

import com.ftn.sbnz.model.models.Pants
import com.ftn.sbnz.model.models.Recommendation

template "Pants fit correction"
rule "Pants fit @{fitType} stretch @{stretch}"
when
    $p : Pants( fitType == "@{fitType}", stretchPercent >= @{stretch}, fabric.category == "CLOTHING" )
then
    Recommendation rec = new Recommendation($p.getFabric(), @{correction}, "@{note}");
    insert(rec);
end
end template
