template header
waistMin
waistMax
correction
note

package templates
import com.ftn.sbnz.model.models.Skirt;
import com.ftn.sbnz.model.models.Recommendation;

template "Skirt Waist Correction"
rule "Waist correction @{waistMin}-@{waistMax}"
when
    $s : Skirt(waist >= @{waistMin}, waist < @{waistMax})
then
    insert(new Recommendation($s.getFabric(), @{correction}, "@{note}"));
end
end template
