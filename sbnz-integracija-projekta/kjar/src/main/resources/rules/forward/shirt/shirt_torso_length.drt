template header
torsoMin
torsoMax
correction

package templates
import com.ftn.sbnz.model.models.Shirt
import com.ftn.sbnz.model.models.Recommendation

rule "Shirt - torso correction @torsoMin-@torsoMax"
when
    $s : Shirt( torso >= @torsoMin, torso < @torsoMax )
then
    Recommendation rec = new Recommendation($s.getFabric(), @correction,
        "Torso correction (" + $s.getTorso() + " cm)");
    insert(rec);
end
