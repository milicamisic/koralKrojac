template header
fitType
stretch
correction
warning

package templates
import com.ftn.sbnz.model.models.Shirt
import com.ftn.sbnz.model.models.Recommendation

rule "Shirt - fit @fitType"
when
    $s : Shirt( fit == "@fitType", elasticity >= @stretch )
then
    Recommendation rec = new Recommendation($s.getFabric(), @correction,
        "@warning");
    insert(rec);
end
