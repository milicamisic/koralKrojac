package forward

import com.ftn.sbnz.model.models.ShirtFabric
import com.ftn.sbnz.model.models.Recommendation
import com.ftn.sbnz.model.models.FabricRecommendation

// ---------------------------------------------
//  SHIRT FIT CORRECTION — transforms Recommendation → FabricRecommendation
// ---------------------------------------------

// a. Loose fit → +10%
rule "Shirt fit: Loose (+10%)"
    salience 75
    no-loop true
when
    $sf : ShirtFabric(shirt.fit == "LOOSE")
    $rec : Recommendation(fabric == $sf.fabric)
then
    double newLen = $rec.getRequiredLength() * 1.10;
    FabricRecommendation fr = new FabricRecommendation(
        $rec.getFabric(),
        newLen,
        $rec.getNote() + " Loose kroj — povećana metraža za +10%.",
        "Shirt",
        ""
    );
    insert(fr);
    System.out.println("👕 [Shirt] Loose fit → +10% → FabricRecommendation created.");
end


// b. Slim fit + stretch ≥ 10% → -0.1 m
rule "Shirt fit: Slim with stretch ≥ 10%"
    salience 74
    no-loop true
when
    $sf : ShirtFabric(
        shirt.fit == "SLIM",
        fabric.stretchPercentage >= 10
    )
    $rec : Recommendation(fabric == $sf.fabric)
then
    double newLen = $rec.getRequiredLength() - 0.1;
    FabricRecommendation fr = new FabricRecommendation(
        $rec.getFabric(),
        newLen,
        $rec.getNote() + " Slim kroj, rastegljiv materijal — smanjena metraža za 0.1 m.",
        "Shirt",
        ""
    );
    insert(fr);
    System.out.println("👕 [Shirt] Slim fit (stretch ≥10%) → -0.1 m → FabricRecommendation created.");
end


// c. Slim fit + stretch < 10% → unsuitable → remove Recommendation
rule "Shirt fit: Slim with stretch < 10%"
    salience 74
when
    $sf : ShirtFabric(
        shirt.fit == "SLIM",
        fabric.stretchPercentage < 10
    )
    $rec : Recommendation(fabric == $sf.fabric)
then
    System.out.println("⚠️ [Shirt] Slim fit not suitable (stretch <10%) → Recommendation removed.");
    retract($rec);
end


// d. Standard fit → keep base as is → create FabricRecommendation
rule "Shirt fit: Standard (no correction)"
    salience 73
when
    $sf : ShirtFabric(shirt.fit == "STANDARD")
    $rec : Recommendation(fabric == $sf.fabric)
then
    FabricRecommendation fr = new FabricRecommendation(
        $rec.getFabric(),
        $rec.getRequiredLength(),
        $rec.getNote() + " Standard kroj — bez korekcije metraže.",
        "Shirt",
        $sf.getShirt().getFit()
    );
    insert(fr);
    System.out.println("👕 [Shirt] Standard fit → FabricRecommendation created.");
end
