template header
sleeveType
correction
note

package forward

import com.ftn.sbnz.model.models.BlouseFabric
import com.ftn.sbnz.model.models.Recommendation

template "Blouse sleeve correction"
rule "Blouse sleeve correction @{sleeveType}"
    salience 90
when
    $bf : BlouseFabric(blouse.sleeveType == "@{sleeveType}")
    $rec : Recommendation(fabric == $bf.fabric)
then
    modify($rec) {
        setRequiredLength($rec.getRequiredLength() + @{correction}),
        setNote($rec.getNote() + " " + "@{note}")
    }
    System.out.println("ðŸ‘• Sleeve correction applied: @{note}");
end
end template
